extends layout

block content
  .page-header
    h3=t('contact.form')

  form.form-horizontal(role='form', method='POST')
    input(type='hidden', name='_csrf', value=token)
    .form-group
      label(class='col-sm-2 control-label', for='name')!=t('contact.name')
      .col-sm-8
        input.form-control(type='name', name='name', id='name', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='email')=t('contact.email')
      .col-sm-8
        input.form-control(type='text', name='email', id='email')
    .form-group
      label(class='col-sm-2 control-label', for='message')=t('contact.body')
      .col-sm-8
        textarea.form-control(type='text', name='message', id='message', rows='7')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-default(type='submit')
          i.fa.fa-mail-forward
          =t('contact.send')
        img.pull-right(height='34', src='/img/sendgrid.png')
