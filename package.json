{
  "name": "Talk-Tracker",
  "version": "0.0.1",
  "description": "Node.js webapp for a university project",
  "repository": {
    "type": "git",
    "url": "https://github.com/Honga1/hackathon-starter.git"
  },
  "author": "Sahat Yalkabov",
  "license": "MIT",
  "scripts": {
    "start": "node app.js",
    "start:dev": "npm-run-all --parallel watch:server watch:build",
    "watch:server": "nodemon --ignore public/",
    "watch:build": "webpack --watch",
    "test": "mocha --reporter spec",
    "postinstall": "npm rebuild node-sass",
    "eslint:run": "eslint **/*.js",
    "eslint:fix": "eslint --fix **/*.js",
    "update:devPackages": "node wipe-dependencies.js && remove-node-modules && npm update --save-dev && npm update --save"
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "chalk": "^2.3.0",
    "cheerio": "^1.0.0-rc.2",
    "clockwork": "^0.1.4",
    "compression": "^1.7.1",
    "connect-mongo": "^1.3.2",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-flash": "^0.0.2",
    "express-session": "^1.15.6",
    "express-status-monitor": "^1.0.1",
    "express-validator": "^3.2.1",
    "fbgraph": "^1.4.1",
    "github": "^9.3.1",
    "instagram-node": "^0.5.8",
    "lastfm": "^0.9.2",
    "lob": "^4.1.1",
    "lusca": "^1.5.2",
    "mongoose": "^4.13.9",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "node-foursquare": "^0.3.2",
    "node-linkedin": "^0.5.6",
    "node-sass-middleware": "^0.11.0",
    "nodemailer": "^4.4.1",
    "passport": "0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-github": "^1.1.0",
    "passport-google-oauth": "^1.0.0",
    "passport-instagram": "^1.0.0",
    "passport-linkedin-oauth2": "^1.5.0",
    "passport-local": "^1.0.0",
    "passport-oauth": "^1.0.0",
    "passport-openid": "^0.4.0",
    "passport-twitter": "^1.0.4",
    "paypal-rest-sdk": "^1.8.1",
    "pug": "^2.0.0-rc.4",
    "request": "^2.83.0",
    "stripe": "^4.25.0",
    "tumblr.js": "^1.1.1",
    "twilio": "^3.11.0",
    "twit": "^2.2.9",
    "validator": "^8.2.0"
  },
  "devDependencies": {
    "babel-core": "*",
    "babel-loader": "*",
    "babel-preset-env": "^1.6.1",
    "bootstrap": "^3.3.7",
    "bundle-loader": "*",
    "chai": "*",
    "css-loader": "*",
    "eslint": "*",
    "eslint-config-airbnb-base": "*",
    "eslint-plugin-chai-friendly": "*",
    "eslint-plugin-import": "*",
    "file-loader": "*",
    "jquery": "^3.2.1",
    "less": "*",
    "less-loader": "*",
    "mocha": "*",
    "nodemon": "^1.14.11",
    "npm-run-all": "^4.1.2",
    "sinon": "*",
    "sinon-mongoose": "*",
    "style-loader": "*",
    "supertest": "*",
    "url-loader": "*",
    "webpack": "*",
    "webpack-dev-server": "*",
    "webpack-node-externals": "^1.6.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-shadow": 0,
      "no-console": 0,
      "no-plusplus": 0,
      "no-unused-expressions": 0,
      "chai-friendly/no-unused-expressions": 2
    },
    "env": {
      "jasmine": true,
      "mocha": true,
      "node": true
    },
    "plugins": [
      "chai-friendly"
    ]
  }
}
